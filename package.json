{
  "name": "@vezlo/src-to-kb",
  "version": "1.1.2",
  "description": "Convert source code repositories into searchable knowledge bases with MCP support for Claude and Cursor",
  "main": "kb-generator.js",
  "type": "commonjs",
  "bin": {
    "src-to-kb": "./kb-generator.js",
    "src-to-kb-search": "./search.js",
    "src-to-kb-mcp": "./mcp-server.mjs",
    "src-to-kb-mcp-install": "./install-mcp.js"
  },
  "scripts": {
    "start": "node kb-generator.js",
    "test": "node scripts/test.js",
    "example": "node kb-generator.js ../SaaSBot --output ./test-output",
    "search": "node search.js",
    "mcp": "node mcp-server.mjs",
    "publish-package": "./scripts/publish.sh",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "knowledge-base",
    "source-code",
    "code-analysis",
    "embeddings",
    "chunking",
    "documentation",
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "cursor",
    "ai-tools",
    "rag",
    "code-search",
    "codebase-analysis"
  ],
  "author": "Vezlo <ashaheen@workhub.ai>",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/vezlo/src-to-kb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vezlo/src-to-kb.git"
  },
  "bugs": {
    "url": "https://github.com/vezlo/src-to-kb/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=14.0.0"
  }
}